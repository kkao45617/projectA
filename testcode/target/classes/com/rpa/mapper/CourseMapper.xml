<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.trip.mapper.CourseMapper">

	<!-- 코스 리스트 출력 -->
	<select id="getList" resultType="com.trip.domain.CourseVO">
		select * from course where 
		coursenum > 0
	</select>
	
	<!-- 여행지역 코스 리스트 출력 -->
	<select id="getCityList" resultType="com.trip.domain.CourseVO">
		select * from course where 
		coursenum > 0 and coursecity like '%'|| #{city} ||'%'
	</select>
	
	<!-- 여행지 리스트 출력 -->
	<select id="getDesList" resultType="com.trip.domain.DesAndCourseVO">
		select * from des_course where
		coursenum = #{courseNum} and pathnum>0 order by pathnum
	</select>
	
	<!-- 코스 출력 -->
	<select id="readCourse" resultType="com.trip.domain.CourseVO">
		select * from course where 
		coursenum = #{courseNum}
	</select>
	
	<!-- 코스 좋아요 클릭 -->
	<update id="likesCourse">
		update course set
		courselike = courselike+1
		where coursenum = #{courseNum}
	</update>
	
</mapper>